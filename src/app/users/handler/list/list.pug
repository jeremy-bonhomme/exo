div( class = "list-group" )
  input( class = "form-control", placeholder = "Filtrer les utilisateurs par nom", type = "text", [(ngModel)] = "search" )
  a( class = "list-group-item list-group-item-action", (click) = "itemSelected( user )", *ngFor = "let user of users | appFilter:search; let i = index" ) {{ user.name }}
div( class = "alert alert-warning", *ngIf = "this.message != ''" ) {{ message }}

app-details( [user] = "selectedUser" )
